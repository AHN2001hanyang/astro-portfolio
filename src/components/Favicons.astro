---
/**
 * 使用 BASE_URL（带结尾斜杠）来生成带 base 的资源地址，
 * 适配 GitHub Pages（/astro-portfolio/）以及本地 dev。
 */
const BASE = import.meta.env.BASE_URL; // 例如 "/astro-portfolio/" 或 "/"
const iconHref = `${BASE}favicon.svg`;
const manifestHref = `${BASE}site.webmanifest`;
---

<!-- Favicon（SVG） -->
<link rel="icon" href={iconHref} type="image/svg+xml" />

<!-- PWA manifest（带 base） -->
<link rel="manifest" href={manifestHref} />
