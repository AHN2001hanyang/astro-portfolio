---
/**
 * 统一用 BASE_URL 组装路径，适配 GitHub Pages (/astro-portfolio/) 与本地 dev。
 * 注意：后缀文件名前不要再加 "/"。
 */
const BASE = import.meta.env.BASE_URL; // 例："/astro-portfolio/" 或 "/"
const iconHref = `${BASE}favicon.svg`;
const manifestHref = `${BASE}site.webmanifest`;
---

<!-- Favicon（SVG） -->
<link rel="icon" href={iconHref} type="image/svg+xml" />
<link rel="shortcut icon" href={iconHref} type="image/svg+xml" />

<!-- PWA manifest -->
<link rel="manifest" href={manifestHref} />
